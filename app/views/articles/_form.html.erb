<div class="col-xs-12 col-md-12 ">
  <div class="col-xs-0 col-md-2">

  </div>
  <div class="col-xs-12 col-md-8 ">
  <%= form_for @article do |f| %>
      <% if @article.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@article.errors.count, "error")%>
            prohibited this article from being saved:
          </h2>
          <ul>
            <% @article.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
      <div class="panel panel-default">
        <div class="panel-heading col-xs-12 col-md-12">
            <p id="text_center">
              <%= f.label 'Categorias'%>
            </p>
            <p id="text_center">
              <spam>
                <%= f.collection_check_boxes :category_ids, @categories, :id, :name %>
              </spam>
            </p>
        </div>
        <div class="panel-body">

          <div class="form-group col-md-12 col-xs-12">
            <div class="col-sm-1 col-md-3"></div>
            <%= f.label :title, class: 'control-label col-sm-10 col-md-6', id: 'formItem'%>
            <div class="col-sm-1 col-md-3"></div>

            <div class="col-xs-12 col-md-12">
              <div class="col-xs-0 col-md-3"></div>
              <%= f.text_field :title, :placeholder => "Title", class: 'col-xs-12 col-md-6' %>
              <div class="col-xs-0 col-md-3"></div>
            </div>

          </div>

          <div class="input-group col-xs-12 col-md-12">
            <p id="text_center" >
              <%= f.label :text%><br>
            </p>
              <%= f.text_area :text, :class =>"form-control custom-control ",
              :rows => "10",  :style => "resize:none", :placeholder => "Text post" %>
          </div>
        </div>
      </div>

      <ul class="nav nav-pills">
        <li>
          <%= f.submit 'Ready', :class => 'btn btn-sm btn-success'%>
        </li>
    <% end %>
        <li>
          <%= button_to "Back", articles_path,
          :class => "btn btn-sm btn-primary", :method => :get %>
        </li>
      </ul>
</div>
